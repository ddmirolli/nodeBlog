extends layout

block content
    if posts
        each post, i in posts
            .post
                h1
                    a(href='/posts/show/#{posts._id}')
                        =post.title
                p.meta Posted in #{post.category} by #{post.author} on #{moment(post.date).format("DD/MM/YYYY")}
                =post.body
                a.more(href='/posts/show/#{posts._id}') Read more...
    else
        p.noposts There are no posts to display...